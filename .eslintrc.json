{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["off"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": ["warn"],
    "max-len": ["off"],
    "comma-dangle": ["off"],
    "no-plusplus": ["off"],

    "react/jsx-filename-extension": ["off"],
    "react/prefer-stateless-function": ["off"],
    "react/jsx-indent": ["off"],
    "react/jsx-max-props-per-line": ["off"],
    "react/jsx-one-expression-per-line": ["off"]
  }
}
